		%article
			%nav.checkout-nav
				%ul
					%li
						=link_to '01 ORDER', './checkout-step1', class: 'active'
					%li
						=link_to '02 CHECKOUT', './checkout-step2', class: 'active'
					%li
						=link_to '03 PAYMENT', '#'
					%li
						=link_to '04 CONFIRMATION', './checkout-step4'

			%h1 Checkout
			%h3
				Review your order, and make sure everything is ok or
				=link_to 'go back', '#'
